---
import SectionContainer from "./projects/SectionContainer.astro";
import SectionTitle from "./ui/SectionTitle.astro";
import Divisor from "./ui/Divisor.astro";
import Form from "@/components/ui/Form.astro";
import ContactInfo from "./contact/ContactInfo.astro";
---

<article class="contact-section h-max" id="contact">
    <div class="h-max mx-4 pt-24">
        <SectionContainer>
            <SectionTitle title="Contacto" showLink={false} />
            <Divisor space="xs" />
            <div
                class="flex flex-col w-full md:flex-row justify-between md:items-center gap-8 md:gap-12 "
            >
                <div class="w-full md:flex-1 ">
                    <Form />
                </div>
                <div class="w-full flex-1 h-full" >
                    <ContactInfo />
                </div>

            </div>
        </SectionContainer>
    </div>
</article>

---
interface Props {
    tag?: "section" | "div";
    id?: string;
    class?: string;
    [x: string]: unknown;
}

const { class: className, id, tag = "section", ...rest } = Astro.props;

const Element = tag;
---

<Element id={id} class:list={["w-screen md:max-w-[1440px] md:mx-auto", className]} {...rest}>
    <slot />
</Element>

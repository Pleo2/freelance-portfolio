---
import { Icon } from "astro-icon/components";
import ContactElement from "@/components/contact/ContactElement.astro";
---

<div
    class="w-96 h-full font-display flex-1 px-2 md:flex md:flex-row md:justify-between md:w-full md:h-92 pt-9 gap-8"
>
    <section class="flex-1">
        <div class="title">
            <span>Contactanos!!</span>
            <p>Y obten una asesoria gratis</p>
        </div>
        <div
            class="socials flex gap-2 [&>div]:bg-foreground/10 [&>div]:text-foreground [&>div]:p-2 [&>div]:rounded-lg mt-2"
        >
            <div class="github-icon">
                <Icon name="icon-github" />
            </div>
            <div class="icon-email">
                <Icon name="icon-at" />
            </div>
            <div class="x-icon">
                <Icon name="icon-x" />
            </div>
        </div>
    </section>

    <section class="flex-1">
        <div class="contact-info">
            <p>Informacion de contacto</p>
        </div>

        <ContactElement
            icon="icon-mail-box"
            title="Email"
            detail="leooel23m@gmail.com"
        />

        <ContactElement
            icon="icon-phone"
            title="Phone"
            detail="+58 412-454-4213"
        />

        <ContactElement
            icon="icon-map-pin"
            title="Location"
            detail="2005 Naguanagua, Manantial"
        />
    </section>
</div>
